<!DOCTYPE html>
<html>
  <head>
    <title>TestTechnique</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <%= link_to "All shops", shops_path, class: 'all' %>
      <ul class='list' >
        <% @categories.each do |categorie| %>
          <li><%= link_to categorie.name, shops_path(category: categorie.name) %></li>
        <% end %>
      </ul>
    </header>
    <%= yield %>
  </body>
</html>
